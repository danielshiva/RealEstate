<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f2f2f2"
    android:orientation="vertical"
    tools:context="com.example.gymhunt.gymhunt.ListcatecoryActivity">

    <LinearLayout
        android:id="@+id/titleView"
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:background="#283e4a"
        android:orientation="horizontal"
        android:weightSum="3">

        <ImageView
            android:id="@+id/left_btn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="5dp"
            android:layout_weight="0.4"
            android:background="@drawable/back"
            android:onClick="goBack"
            android:visibility="visible" />

        <TextView
            android:id="@+id/title_text"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="2.1"
            android:gravity="center_vertical|center_horizontal"
            android:text="Gain Muscle"
            android:textColor="#e8ebec"
            android:textSize="20dp" />

        <Button
            android:id="@+id/right_btn"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="0.5"
            android:text="Menu"
            android:textSize="15sp"
            android:visibility="invisible" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        android:weightSum="3">

        <RelativeLayout
            android:id="@+id/beginner"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:onClick="goWorkoutScreen">

            <ImageView
                android:id="@+id/beginner_img"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:background="@drawable/muscle" />

            <TextView
                android:id="@+id/beginner_text1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:text="3 full body routine"
                android:textColor="#ffffff"
                android:textSize="25sp" />

            <TextView
                android:id="@+id/beginner_text2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/beginner_text1"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp"
                android:text="Beginner"
                android:textColor="#ffffff"
                android:textSize="20sp" />

            <View style="@style/Divider" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/intermediate"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:onClick="goWorkoutScreen">

            <ImageView
                android:id="@+id/intermediate_img"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:background="@drawable/muscle" />

            <TextView
                android:id="@+id/intermediate_text1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:text="4-day Split"
                android:textColor="#ffffff"
                android:textSize="25sp" />

            <TextView
                android:id="@+id/intermediate_text2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/intermediate_text1"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp"
                android:text="Intermediate"
                android:textColor="#ffffff"
                android:textSize="20sp" />

            <View style="@style/Divider" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/advanced"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:onClick="goWorkoutScreen">

            <ImageView
                android:id="@+id/advanced_img"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:background="@drawable/muscle" />

            <TextView
                android:id="@+id/advanced_text1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:text="5-day Split"
                android:textColor="#ffffff"
                android:textSize="25sp" />

            <TextView
                android:id="@+id/advanced_text2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/advanced_text1"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp"
                android:text="Advanced"
                android:textColor="#ffffff"
                android:textSize="20sp" />

            <View style="@style/Divider" />

        </RelativeLayout>

    </LinearLayout>


</LinearLayout>
