<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/titleView"
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:background="#283e4a"
        android:orientation="horizontal"
        android:weightSum="3">

        <ImageView
            android:id="@+id/left_btn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="5dp"
            android:layout_weight="0.4"
            android:background="@drawable/back"
            android:onClick="goBack"
            android:visibility="visible" />

        <TextView
            android:id="@+id/title_text"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="2.1"
            android:gravity="center_vertical|center_horizontal"
            android:text="Barbell Dumbell"
            android:textColor="#e8ebec"
            android:textSize="20dp" />

        <Button
            android:id="@+id/right_btn"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="0.5"
            android:text="Menu"
            android:textSize="15sp"
            android:visibility="invisible" />

    </LinearLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#D1D6CE">

        <ImageView
            android:id="@+id/workoutImageView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/sixpack" />

        <TextView
            android:id="@+id/workoutText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/workoutImageView"
            android:layout_centerHorizontal="true"
            android:text="Barbell Dumbell"
            android:textColor="#ffffff"
            android:textSize="30dp" />

    </RelativeLayout>

</LinearLayout>
